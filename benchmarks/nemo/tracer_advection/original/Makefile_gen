# Makefile for the tracer-advection benchmark.
#
# PROF_LIB_DIR must be set to the location of the profiling library.
# PROF_LIB_NAME must be set to the name of the profiling library (which
# must be present in PROF_LIB_DIR).

FORT_FLAGS = ${F90FLAGS} ${OMPFLAGS} ${PROF_LIB_INC}

tra_adv.exe: tra_adv.o
	${F90} ${OMPFLAGS} -o $@ tra_adv.o  \
            ${LDFLAGS}

%.o: %.f90
	${F90} ${FORT_FLAGS} -c $<
%.o: %.F90
	${F90} ${FORT_FLAGS} -c $<

clean:
	rm -f *.o *.mod
	rm -f *~

allclean: clean
	rm -f gnu_opt_report.txt output.dat tra_adv.exe
